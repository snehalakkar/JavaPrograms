package com.bridgelabz.programs;

import java.util.Scanner;

public class SumOf3Int
{
	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("programme started");
		int sum=0;
		System.out.println("enter the size of array");
		int n=scan.nextInt();
		int arr[]=new int[n];
		System.out.println("enter the array elements");
		for(int i=0;i<n;i++)
			arr[i]=scan.nextInt();

		System.out.println("array elements are");
		for(int i=0;i<n;i++)
			System.out.println(arr[i]);


		checklogic(n,arr,sum);

	}

	public static void checklogic(int n,int arr[],int sum)
	{
		int count=0;
		for(int i=0;i<n-2;i++)
			for(int j=i+1;j<n-1;j++)
				for(int k=j+1;k<n;k++)
					if(arr[i]+arr[j]+arr[k]==sum)
					{	count++;
					System.out.println(arr[i]+ " "+arr[j]+" "+arr[k]+ "are triplets having sum equal to zero");	
					System.out.println();
					
					}
		System.out.println("count is"+count);
					else
						System.out.println("array doesnt hava an triplet having sum equals to zero");
	}
}
